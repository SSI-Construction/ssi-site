<section class="bg-white shadow-md py-8 text-center">
  <img src="/images/icon_310x310.png" alt="SSI Logo" class="w-24 mx-auto mb-4 rounded-full">
  <h1 class="text-4xl font-bold text-blue-700">SSI Construction Manager</h1>
  <p class="text-gray-600 mt-2">The most powerful, affordable tool for managing construction finances</p>
  <a href="https://apps.microsoft.com/detail/9nkwgxcn3twd?hl=en-us&gl=CA" target="_blank"
     class="mt-4 inline-block bg-blue-600 text-white px-6 py-3 rounded-full shadow hover:bg-blue-700 transition">
    Get on Microsoft Store
  </a>
</section>

<nav class="bg-gray-100 text-center py-4 space-x-4">
  <a href="#video" class="text-blue-700 hover:underline">Video</a>
  <a href="#blog" class="text-blue-700 hover:underline">Blog</a>
  <a href="#contact" class="text-blue-700 hover:underline">Contact</a>
  <a href="#reviews" class="text-blue-700 hover:underline">Reviews</a>
  <a href="/getting-started.html" class="text-blue-700 hover:underline">Getting Started</a>
</nav>

<section id="video" class="py-12 text-center bg-white">
  <h2 class="text-2xl font-semibold text-blue-800 mb-6">How to Use SSI Construction Manager</h2>
  <video class="mx-auto shadow-lg rounded-xl" width="720" height="480" controls>
    <source src="/ssi_walkthrough.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</section>

<section id="blog" class="py-12 bg-gray-50 text-center">
  <h2 class="text-2xl font-semibold text-blue-800 mb-6">Latest Blog Posts</h2>
  <div class="max-w-4xl mx-auto px-4 text-left space-y-10">
    {% for post in collections.posts | reverse %}
      <article class="bg-white p-6 rounded-xl shadow-md">
        <h3 class="text-2xl font-bold text-blue-700 mb-3">
          <a href="{{ post.url }}" class="hover:underline">{{ post.data.title }}</a>
        </h3>
        <p class="text-gray-600">
          {{ post.templateContent | safe }}
        </p>
        <p class="text-sm text-gray-500 mt-4">
          Posted on {{ post.date | date("MMMM d, yyyy") }}
        </p>
      </article>
    {% endfor %}
  </div>
</section>

<section id="contact" class="py-12 text-center bg-white">
  <h2 class="text-2xl font-semibold text-blue-800 mb-6">Contact Us</h2>
  <form name="contact" method="POST" data-netlify="true" class="max-w-xl mx-auto space-y-4 px-4">
    <input type="hidden" name="form-name" value="contact" />
    <input type="text" name="name" placeholder="Your Name" class="w-full border p-3 rounded" required />
    <input type="email" name="email" placeholder="Your Email" class="w-full border p-3 rounded" required />
    <input type="text" name="company" placeholder="Your Company" class="w-full border p-3 rounded" />
    <textarea name="message" placeholder="Your Message" class="w-full border p-3 rounded" rows="5" required></textarea>
    <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">Send Message</button>
  </form>
</section>

<section id="reviews" class="py-12 bg-gray-50 text-center">
  <h2 class="text-2xl font-semibold text-blue-800 mb-6">Submit a Customer Review</h2>
  <form name="reviews" method="POST" data-netlify="true" class="max-w-xl mx-auto space-y-4 px-4">
    <input type="hidden" name="form-name" value="reviews" />
    <input type="text" name="name" placeholder="Your Name" class="w-full border p-3 rounded" required />
    <input type="text" name="company" placeholder="Your Company" class="w-full border p-3 rounded" />
    <textarea name="review" placeholder="Your Review" class="w-full border p-3 rounded" rows="4" required></textarea>
    <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700">Submit Review</button>
  </form>
  <p class="text-sm text-gray-500 mt-4">* Reviews will be published after admin approval.</p>
</section>
